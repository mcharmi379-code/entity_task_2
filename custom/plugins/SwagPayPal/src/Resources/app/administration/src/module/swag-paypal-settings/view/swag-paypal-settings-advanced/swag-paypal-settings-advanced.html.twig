<sw-card
    class="swag-paypal-settings-environment"
    position-identifier="swag-paypal-settings-environment"
    :title="$t('swag-paypal-settings.environment.title')"
    :is-loading="settingsStore.isLoading"
>
    <span class="swag-paypal-settings-environment__info-text">
        {{ $t('swag-paypal-settings.environment.info') }}
    </span>

    <swag-paypal-setting path="SwagPayPal.settings.isLocalEnvironment" />
</sw-card>

{% block swag_paypal_settings_webhook %}
<swag-paypal-settings-webhook />
{% endblock %}

<sw-card
    class="swag-paypal-settings-cross-border"
    position-identifier="swag-paypal-settings-cross-border"
    :title="$t('swag-paypal-settings.crossBorder.title')"
    :is-loading="settingsStore.isLoading"
>
    <sw-alert class="swag-paypal-settings-cross-border__warning-text" variant="warning">
        {{ $t('swag-paypal-settings.crossBorder.warning') }}
    </sw-alert>

    <span class="swag-paypal-settings-cross-border__info-text">
        {{ $t('swag-paypal-settings.crossBorder.info') }}
    </span>

    <swag-paypal-setting path="SwagPayPal.settings.crossBorderMessagingEnabled" />

    <swag-paypal-setting
        path="SwagPayPal.settings.crossBorderBuyerCountry"
        :options="countryOverrideOptions"
    />
</sw-card>
